<div class="page-heading">
    <h1 class="app-name">SoundTribe</h1>
    <div class="page-heading-name">
        <img class="page-icon" src="/images/drum.png" alt="Drum icon">
    </div>
</div>
<button class="go-back-btn" onclick="history.back()"><< Go Back</button>
<a class="detail-profile-link" href="/profile/view/{{album.tribe._id}}/posts"><h2 class="album-detail-name">{{album.title}} - {{album.tribe.username}}</h2></a> 
<div class="album-card">
    <img src="{{album.image}}" alt="Cover album image">
    <div class="post-likes detail-likes">
        <form action="/like/edit/{{album._id}}" method="post">
            <button type="submit">
                {{#if album.isLiked}}
                    <img class="post-like-icon" src="/images/liked.png" alt="liked post icon">
                {{else}}
                    <img class="post-like-icon" src="/images/like.png" alt="unliked post icon">
                {{/if}}
            </button>
        </form>
        <p class="post-num-likes">{{album.numOfLikes}}</p>
    </div>
    <div class="album-card-info">
        <div class="genres">
            {{#each album.genres}}
                <p class="genre">{{this}}</p>
            {{/each}}
        </div>
        <p class="description">{{album.description}}</p>
    </div>
</div>
{{#if album.tracks}}
    <div class="detail-track-container">
        {{#each album.tracks}}
            <div class="track-card">
                {{!-- <p>{{this.trackNumber}}</p> --}}
                <h4 class="track-name">{{this.trackName}}</h4>
                <audio controls src="{{this.trackUrl}}"></audio>
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="empty-page">
        <img src="/images/profile.png" alt="App Icon">
        <h2>No tracks were posted</h2>
    </div>
{{/if}}
