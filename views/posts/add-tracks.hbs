<div class="page-heading">
    <h1 class="app-name">SounTribe</h1>
    <div class="page-heading-name">
        <img class="page-icon" src="/images/new-post.png" alt="New post icon">
        <h2 class="page-name">New Album</h2>
    </div>
</div>
<h3 class="steps">Step 2/2</h3>
{{#if error}}
    <p>{{error}}</p>
{{/if}}
<h1>Add tracks for {{album.title}}</h1>
<button id="upload_widget" class="cloudinary-button">Upload</button>
<button id="add-spotify-btn">Import from Spotify</button>
<form action="/posts/new/{{album._id}}/add-tracks/spotify" method="get" id="spotify-search-form">
    <label for="albumName">Search for an album</label>
    <input type="text" name="albumName" placeholder="The Dark Side Of The Moon">
    <button type="submit">Search</button>
</form>
<form action="/posts/new/{{album._id}}/add-tracks" method="post" id="local-uploads-form">
    <div id="tracks">
    {{!-- Filled when upload --}}
    </div>
    <button type="submit">Submit</button>
</form>


<!-- cloudinary upload widget -->
<script 
    src="https://widget.cloudinary.com/v2.0/global/all.js" 
    type="text/javascript">
</script>
<script src="/scripts/add-tracks.js"></script>
