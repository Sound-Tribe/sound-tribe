<div class="page-heading">
    <h1 class="app-name">SoundTribe</h1>
    <div class="page-heading-name">
        <img class="page-icon" src="/images/home.png" alt="Home icon">
        <h2 class="page-name">Home</h2>
    </div>
</div>
{{#each albums}}
    <div class="post">
        <a class="post-profile-info" href="/profile/view/{{this.tribe._id}}/posts">
            <img class="post-profile-picture" src="{{this.tribe.picture}}" alt="Profile picture">
            <p class="post-tribe-name">{{this.tribe.username}}</p>
        </a>
        <a href="/posts/detail/{{this._id}}" class="album-detail-link">
            <h5 class="post-album-title">{{this.title}}</h5>
            <img class="post-album-img" src="{{this.image}}" alt="{{this.title}} cover image">
        </a>
        <div class="post-likes">
            <form action="/like/edit/{{this._id}}" method="post">
                <button type="submit">
                    {{#if this.isLiked}}
                        <img class="post-like-icon" src="/images/liked.png" alt="liked post icon">
                    {{else}}
                        <img class="post-like-icon" src="/images/like.png" alt="unliked post icon">
                    {{/if}}
                </button>
            </form>
            <p class="post-num-likes">{{this.numOfLikes}}</p>
        </div>
    </div>
{{/each}}
{{#if empty}}
    <div class="empty-page">
        <img src="/images/profile.png" alt="App Icon">
        <h2>Explore the jungle first</h2>
        <p>Head to your discover page</p>
        <img class="text-icon" src="/images/discover.png" alt="Discover Icon">
        <p>and start following Tribes.</p>
        <p>Here you will find their greatest hits.</p>
    </div>
{{/if}}