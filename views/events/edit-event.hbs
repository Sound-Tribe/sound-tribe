<div class="page-heading">
    <h1 class="app-name">SounTribe</h1>
    <div class="page-heading-name">
        <img class="page-icon" src="/images/event.png" alt="Event icon">
        <h2 class="page-name">New Event</h2>
    </div>
</div>
<form action="/profile/calendar/edit/{{event._id}}" method="post">
    <label for="day"></label>
    <input type="number" name="day" value="{{event.day}}">
    <label for="month"></label>
    <input type="number" name="month" value="{{event.month}}">
    <label for="year"></label>
    <input type="number" name="year" value="{{event.year}}">
    <label for="location"></label>
    <input type="text" name="location" value="{{event.location}}">
    <button type="submit">Save event</button>
</form>