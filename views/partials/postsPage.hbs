{{#each this}}
    <div class="post" id="post{{this._id}}">
        <a href="/posts/detail/{{this._id}}" class="album-detail-link">
            <h5 class="post-album-title">{{this.title}}</h5>
            <img class="post-album-img" src="{{this.image}}" alt="{{this.title}} cover image">
        </a>
        <div class="bottom-album">
            <div class="post-likes">
                <form action="/like/edit/{{this._id}}" method="post">
                    <input type="hidden" id="{{this._id}}" class="scrollPosition" name="scrollPosition" value="">
                    <button onclick="assignVerticalValue()" type="submit">
                        {{#if this.isLiked}}
                            <img class="post-like-icon" src="/images/liked.png" alt="liked post icon">
                        {{else}}
                            <img class="post-like-icon" src="/images/like.png" alt="unliked post icon">
                        {{/if}}
                    </button>
                </form>
            <p class="post-num-likes">{{this.numOfLikes}}</p>
            </div>
            <div class="edit-container">
                {{#if this.owner}}
                    <a href="/posts/edit/{{this._id}}"><img src="/images/feather.png" alt="Feather icon for edit album"></a>
                    <a href="/posts/delete/{{this._id}}"><img src="/images/delete.png" alt="Trash icon for delete album"></a>
                {{/if}}
            </div>
        </div>  
    </div>
{{/each}}