<div class="page-heading">
    <h1 class="page-name">Sign Up</h1>
    <div class="page-heading-name">
        <img class="page-icon" src="/images/totem.png" alt="Sign up icon">
    </div>
</div>

<form class="signup-form" action="/auth/signup" method="POST">

  <label class="username">Username</label>
  <input class="input-signup" type="text" name="username" placeholder="JohnDoe88" required="true"/>

  <label class="email">Email</label>
  <input class="input-signup"type="email" name="email" placeholder="john@doe.com" required="true"/>

  <label class="password">Password</label>
  <input class="input-signup"type="password" name="password" placeholder="********" required="true"/>

  <fieldset>
    <legend>What are you?</legend>
    <input type="radio" name="type" value="tribe">
    <label for="tribe"><img src="/images/drum.png" alt="tribe icon"></label>
    <input type="radio" name="type" value="fan">
    <label for="fan"><img src="/images/fan.png" alt="fan mask icon"></label>
  </fieldset>

  {{#if error}}
    <p style="color: red;">{{error}}</p>
  {{/if}}

  <button class="button-signup" type="submit">Create account</button>
  <a href="/auth/login">Already have an account?</a>
</form>
